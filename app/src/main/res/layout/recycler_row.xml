<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_marginBottom="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/recyclerProfilFotografi"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop">
        </ImageView>

        <TextView
            android:id="@+id/recyclerKullaniciAdiText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="Ä°sim Soyisim"
            android:textAlignment="viewStart"
            android:textSize="18sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/recyclerCommentText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Comment"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/recyclerImageView"
        android:layout_width="350dp"
        android:layout_height="220dp"
        android:layout_gravity="center"
        android:paddingTop="5dp" />

    <TextView
        android:id="@+id/recyclerTarihText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="4dp"
        android:text="Tarih"
        android:textColor="#A8A4A4"
        android:textSize="13sp">

    </TextView>


</LinearLayout>